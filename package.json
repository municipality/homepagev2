{
  "name": "angular2-project",
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently \"tsc -w\" \"node ./bin/www\" \"npm run watch-css\" \"npm run watch-mobile-css\"",
    "postinstall": "typings install && tsc",
    "build-css": "node-sass --include-path scss scss/main.scss public/app/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "build-mobile-css": "node-sass --include-path scss scss/mobile.scss public/app/mobile.css",
    "watch-mobile-css": "nodemon -e scss -x \"npm run build-mobile-css\""
  },
  "dependencies": {
    "angular2": "2.0.0-beta.9",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "express": "~4.13.1",
    "morgan": "~1.6.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "serve-favicon": "~2.3.0",
    "systemjs": "0.19.24",
    "typescript": "^1.8.0",
    "typings": "^0.6.8",
    "zone.js": "0.5.15",
    "@angular/router": "3.0.0-rc.1"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2"
  }
}
